{
    "name": "realmgrave",
    "version": "0.0.0",
    "description": "Realmgrave is a unique RESTful mock API for a simple fictional fantasy MMORPG.",
    "main": "dist/index.js",
    "author": "Justin Carver",
    "license": "GPL-3.0-or-later",
    "engines": {
        "node": "^16.15.1"
    },
    "scripts": {
        "build": "npm-run-all clean tsc",
        "clean": "rimraf dist",
        "format": "yarn run prettier --write",
        "lint": "eslint --ext js,jsx,ts,tsx .",
        "nodemon": "nodemon --watch dist",
        "prettier": "prettier --ignore-path .gitignore \"**/*.{css,html,js,jsx,json,ts,tsx,md,mdx,yml,yaml}\"",
        "start": "node dist/index.js",
        "dev": "npm-run-all build --parallel tsc:watch nodemon",
        "test": "npm-run-all lint test:format",
        "test:format": "yarn run prettier --check",
        "tsc": "tsc",
        "tsc:watch": "tsc --watch"
    },
    "dependencies": {
        "@types/express": "^4.17.14",
        "@types/http-proxy-middleware": "^1.0.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "http-proxy-middleware": "^2.0.6",
        "source-map-support": "^0.5.16",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@types/node": "^13.7.7",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "nodemon": "^2.0.2",
        "npm-run-all": "^4.1.5",
        "prettier": "1.19.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.8.4"
    },
    "prettier": {
        "proseWrap": "always",
        "arrowParens": "always",
        "trailingComma": "all",
        "bracketSameLine": true,
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4
    }
}
